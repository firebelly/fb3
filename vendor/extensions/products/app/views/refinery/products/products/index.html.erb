<%= content_for :aside do %>
  <div id="cart">
    <%= render :partial => "refinery/products/carts/cart" -%>
  </div>
<% end -%>

<% content_for :page do %>
  <header class="section-title">
    <h1>Store</h1>
    <h2>right now, itâ€™s kind of<br> just typeforce books.</h2>
  </header>
  <section class="store">
    <ul class="products clearfix filter-items">
      <% @products.each do |product| %>
        <li class="product">
          <div class="product-image" style="background-image:url(<%= product.images.first.thumbnail(geometry: '800x600#').convert('-quality 70').url unless product.images.blank? %>);"></div>
          <header>
            <h1><a href="<%= refinery.products_product_path(product) %>"><%= product.title -%></a></h1>
          </header>
          <a class="view-product" href="<%= refinery.products_product_path(product) %>"><span>Details</span></a>
        </li>
      <% end -%>
    </ul>
  </section>
<% end %>
