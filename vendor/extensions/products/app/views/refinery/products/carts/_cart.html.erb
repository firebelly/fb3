  <section class="cart">
    <% unless @cart.cart_items.blank? %>
      <h3>Your Cart:</h3>
      <%= form_for @cart, url: "/store/cart/#{@cart.id}", remote: true, method: 'put', html: { id: 'cart-form' } do |f| %>
        <ul>
          <%= f.fields_for :cart_items do |cart_items_form| %>
            <%= render partial: 'refinery/products/carts/cart_item', locals: { cart_item: cart_items_form.object, f: cart_items_form } %>
          <% end -%>
          <li class="subtotal">Total: <%= number_to_currency(@cart.subtotal, precision: 0) %></li>
        </ul>
      <% end -%>
    <div class="actions">
      <%= render "refinery/products/carts/paypal_form" -%>
    </div>
    <% end -%>
  </section>
