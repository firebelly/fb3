<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(project_industry) -%>">
  <span class='title'>
    <%= project_industry.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.projects_project_industry_path(project_industry), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_projects_admin_project_industry_path(project_industry), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.projects_admin_project_industry_path(project_industry), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: project_industry.name)}}  ) %>
  </span>
</li>
