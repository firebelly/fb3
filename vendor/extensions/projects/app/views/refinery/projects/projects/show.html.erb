<% content_for :title, @project.title %>

<% content_for :page do %>
  <article class="content-block">
    <section class="content interior">
      <div class="campaign-banner" style="background-image:url(<%= @project.image.thumbnail().url if @project.image %>);"></div>
      <div class="intro clearfix">
        <header class="section-title">
          <h1 class="campaign-client"><%= @project.title -%></h1>
          <h4 class="campaign-name"><%= @project.subtitle %></h4>
          <%= render :partial => '/shared/edit_bug', :locals => { :obj => @project, :edit_path => refinery.edit_projects_admin_project_path(@project) }%>
        </header>
        <div class="summary user-content"><%= raw @project.summary %></div>
        <div class="campaign-meta grid">
          <div class="industry one-half">
            <div class="-inner">
              <h3>Industry:</h3>
              <ul><li><%= @project.industry.name -%></li></ul>
            </div>
          </div>
          <div class="services one-half">
            <div class="inner">
              <h3>Services:</h3>
              <ul><li><%= @project.service_counts.map { |t| t.name }.join(', ') -%></li></ul>
            </div>
          </div>
        </div>
      </div>
      <div class="project-images clearfix">
        <%= raw @project.content -%>
      </div>
    </section>
  </article>
<% end %>
