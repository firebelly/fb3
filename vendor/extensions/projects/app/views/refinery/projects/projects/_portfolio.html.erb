<section class="portfolio">
  <ul class="projects filter-items clearfix">
    <% @projects.each do |project| %>
      <li class="project interior" data-services="<%= project.service_classes %>" data-industry="<%= project.industry.slug -%>">
        <article>
          <div class="project-image lazy" style="background-image:url('/assets/gray.gif');" data-original="<%= project.thumbnail_image.thumbnail(geometry: '800x600#c').convert('-quality 100').url if project.thumbnail_image %>"></div>
          <header>
            <h1><%= link_to project.title, refinery.projects_project_path(project) %></h1>
            <%=raw "<h3>#{project.rollover_subtitle}</h3>" unless project.rollover_subtitle.blank? %>
          </header>
          <%= link_to(raw("<span>View Project</span>"), refinery.projects_project_path(project), class: 'view-project') %>
        </article>
      </li>
    <% end -%>
  </ul>
</section>
