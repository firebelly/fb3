<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(news_post) -%>">
  <span class='title'>
    <%= news_post.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.news_posts_news_post_path(news_post), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_news_posts_admin_news_post_path(news_post), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.news_posts_admin_news_post_path(news_post), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: news_post.title)}}  ) %>
  </span>
</li>
