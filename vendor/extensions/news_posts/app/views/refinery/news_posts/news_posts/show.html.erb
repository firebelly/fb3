<% content_for :meta do %>
  <link rel="alternate" type="application/rss+xml" title="Firebelly News" href="<%= refinery.news_posts_news_posts_url(format: 'rss') %>"> 
<% end -%>

<%= content_for :aside do %>
  <%= render :partial => "refinery/news_posts/news_posts/nav" -%>
<% end -%>

<% content_for :page do %>
  <%= render :partial => "shared/news_post", :locals => { :news_post => @news_post, :is_single => true } %>

  <nav class="footer-pagination">
    <ul>
      <li class="prev">
        <%= link_to(raw('<span class="arrow">&larr;</span> Previous Post'), refinery.news_posts_news_post_path(@news_post.prev || ::Refinery::NewsPosts::NewsPost.published.last), rel: 'prev') %>
      </li>
      <li class="next">
        <%= link_to(raw('Next Post <span class="arrow">&rarr;</span>'), refinery.news_posts_news_post_path(@news_post.next || ::Refinery::NewsPosts::NewsPost.published.first), rel: 'next') %>
      </li>
    </ul>
  </nav>

<% end %>
