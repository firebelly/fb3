<% content_for :body_content_title do %>
  <%= @news_post.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @news_post.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @news_post.date %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @news_post.content %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @news_post.image, nil %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @news_post.user_id %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%=raw @news_post.position %>
    </p>
  </section>
  <section>
    <h1>Image Caption</h1>
    <p>
      <%=raw @news_post.image_caption %>
    </p>
  </section>
  <section>
    <h1>Sidebar</h1>
    <p>
      <%=raw @news_post.sidebar %>
    </p>
  </section>
  <section>
    <h1>Published</h1>
    <p>
      <%=raw @news_post.published %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="news_posts">
      <% @news_posts.each do |news_post| %>
        <li>
          <%= link_to news_post.title, refinery.news_posts_news_post_path(news_post) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
