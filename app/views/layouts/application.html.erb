<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <%# site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render "/refinery/head" %>
  <body class="<%= @body_class || '' -%>" id="<%= @body_id || '' -%>">
    <%# site_bar -%>
    <header class="site-header clearfix" aria-role="banner">
      <%= render "/refinery/header" -%>
    </header>
    <div id="wrapper" aria-role="main">
      <div id="side">
        <button type="button" class="menu-toggle tcon tcon-no-animate tcon-menu--xcross xcross-open" aria-label="toggle menu">
          <span class="tcon-menu__lines" aria-hidden="true"></span>
          <span class="tcon-visuallyhidden">toggle menu</span>
        </button>

        <%= render "/shared/sitenav" -%>
        
        <aside class="main">
          <%= yield :aside %>
        </aside>
      </div><!-- END #side -->

      <div id="project-side">
        <header class="main">
          <h2>Work</h2>
          <button type="button" class="project-side-toggle tcon tcon-no-animate tcon-menu--xcross xcross-open" aria-label="toggle project nav">
            <span class="tcon-menu__lines" aria-hidden="true"></span>
            <span class="tcon-visuallyhidden">toggle project nav</span>
          </button>
        </header>

        <%= render "portfolio_side" -%>
      </div><!-- END #project-side -->

      <section id='page'>
        <%= yield %>
        <%= yield :page %>
      </section><!-- END #page -->

        <%= yield :grid_page %>

      <footer class="site-footer" aria-role="contentinfo">
        <%= render "/refinery/footer" -%>
      </footer>
    </div> <!-- END #wrapper -->
    <%= render "/refinery/javascripts" %>
  </body>
</html>
